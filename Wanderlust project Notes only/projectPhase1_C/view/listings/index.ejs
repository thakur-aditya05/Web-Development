<% layout("/layouts/boilerplate") %>



<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3"> <!-----photoes ek row me aaye na ki maae large screen -------->
    <%for(let listing of allistings){%>
    <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card " > <!---style="width: 20rem;"-->
            <!-- <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;"> -->     <!-----affter re intialising data-------->
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay">
                overlay
            </div>
            <div class="card-body">
                <p class="card-text">
                    <b><%=listing.title%></b>
                        <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN")%> /night
                        <i class="tax-info">&nbsp;&nbsp;+18 GST</i>
                        
                </p>
            </div>
        </div>
    </a>    
    <%}%>
</div>
